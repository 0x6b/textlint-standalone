{
  "name": "textlint-standalone",
  "type": "module",
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "build": "bun build --compile --minify ./src/main.ts --outfile dist/textlint",
    "clean": "rimraf node_modules dist bun.lock",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@0x6b/textlint-rule-no-emoji": "^0.2.0",
    "@0x6b/textlint-rule-normalize-whitespaces": "^1.2.1",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "textlint": "^15.2.3",
    "textlint-rule-ng-word": "^1.0.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "rimraf": "^6.0.1"
  }
}
